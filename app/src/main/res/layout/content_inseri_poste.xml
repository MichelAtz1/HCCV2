<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#CCC"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.desenvolvedor.michelatz.aplicativohcc.InseriPoste"
    tools:showIn="@layout/app_bar_inseri_poste">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_margin="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:id="@+id/tableLayout">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/txtTipo" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/spnTiposPostes"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/botao" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/txtAltura" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioAltura"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">

                <RadioButton android:id="@+id/bt8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="bt8"
                    android:text="@string/bt8"/>

                <RadioButton android:id="@+id/bt14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="bt14"
                    android:text="@string/bt14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">

                <RadioButton android:id="@+id/bt9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="bt9"
                    android:text="@string/bt9" />

                <RadioButton android:id="@+id/bt15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="bt15"
                    android:text="@string/bt15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">

                <RadioButton android:id="@+id/bt10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="bt10"
                    android:text="@string/bt10" />

                <RadioButton android:id="@+id/bt16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="bt16"
                    android:text="@string/bt16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">


            <RadioButton android:id="@+id/bt11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt11"
                android:text="@string/bt11" />

            <RadioButton android:id="@+id/bt17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt17"
                android:text="@string/bt17" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">

            <RadioButton android:id="@+id/bt12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt12"
                android:text="@string/bt12" />

            <RadioButton android:id="@+id/bt18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt18"
                android:text="@string/bt18" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">

            <RadioButton android:id="@+id/bt13"
                android:onClick="bt13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt13" />

            </LinearLayout>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/txtCapacidade" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/spnCapacidade"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/botao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#F00"
                android:layout_height="wrap_content"
                android:text="@string/txtVidaUtil" />

            <CheckBox
                android:id="@+id/radioVidaUtil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:text="@string/txtSim" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/txtNumeroPlaca" />


        <EditText
            android:id="@+id/textNumeroPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:hint="@string/hintNumeroPlaca">
        </EditText>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_margin="10dp"
                android:focusableInTouchMode="true"
                android:background="@drawable/border"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">


                    <TextView
                        android:text="@string/txtEstrutura"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:layout_span="4"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:id="@+id/textView" />

                    <Button
                        android:text="@string/btSinalPositivo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:background="@drawable/botao"
                        android:onClick="adicionarExtrutura" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="5dp"
                    android:background="#000" />

                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/listViewEstruturas" />

            </TableLayout>

            <TextView
                android:text="@string/txtIluminacao"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />



                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioIluminacao"
                    android:layout_marginEnd="54dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="54dp" >

                        <RadioButton
                            android:id="@+id/btSim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="17sp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/txtSim" />

                        <RadioButton
                            android:id="@+id/btNao"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="10dp"
                            android:textSize="17sp"
                            android:layout_height="wrap_content"
                            android:text="@string/txtNao" />

                </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/txtTelefonia" />


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

            <CheckBox
                android:id="@+id/radioTelefoniaTL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:text="@string/btTL" />

                 <CheckBox
                     android:id="@+id/radioTelefoniaNET"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="13dp"
                     android:layout_marginTop="10dp"
                     android:textSize="17sp"
                     android:text="@string/btNET" />

                 <CheckBox
                     android:id="@+id/radioTelefoniaFO"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="13dp"
                     android:layout_marginTop="10dp"
                     android:textSize="17sp"
                     android:text="@string/btFO" />


             </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/txtEstai" />


            <EditText
                android:id="@+id/textEstai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:hint="@string/hintDigitar">
            </EditText>


            <TextView
                android:text="@string/txtAcesso"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />


                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border"
                    android:layout_marginBottom="10dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/radioAcesso"
                        android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/btAcesso1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:onClick="btAcesso1"
                        android:textSize="17sp"
                        android:text="@string/btLavoura" />

                    <RadioButton
                        android:id="@+id/btAcesso2"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:onClick="btAcesso2"
                        android:layout_height="wrap_content"
                        android:text="@string/btCampo" />

                        <RadioButton
                        android:id="@+id/btAcesso3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:onClick="btAcesso3"
                        android:text="@string/btEstrada" />

                    <RadioButton
                        android:id="@+id/btAcesso4"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:onClick="btAcesso4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btPatio" />

                            <RadioButton
                                android:id="@+id/btAcesso5"
                                android:onClick="btAcesso5"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:text="@string/btRua" />


                        <RadioButton
                                android:id="@+id/btAcesso6"
                                android:onClick="btAcesso6"
                                android:textSize="17sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/btCalcada" />

                        <RadioButton
                                android:id="@+id/btAcesso7"
                                android:onClick="btAcesso7"
                                android:textSize="17sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/btMato" />

                            <RadioButton
                                android:id="@+id/btAcesso8"
                                android:onClick="btAcesso8"
                                android:textSize="17sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/btSemAcesso" />

                    </RadioGroup>
                </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/txtTipoSolo" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioTipoSolo"
                android:layout_marginEnd="54dp"
                android:orientation="vertical"
                android:layout_marginRight="54dp" >

                <RadioButton
                    android:id="@+id/btA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="13dp"
                    android:text="@string/btFacilEscavacao" />

                <RadioButton
                    android:id="@+id/btB"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="@string/btPequenosPedregulhos" />

                <RadioButton
                    android:id="@+id/btC"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="@string/btSoloRochoso" />

            </RadioGroup>

            <Button
                android:id="@+id/button6"
                android:layout_height="50dp"
                android:background="@drawable/botao"
                android:onClick="irProximoConsEquipamento"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="100dp"
                android:text="@string/btProximo" />


        </TableLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>